<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorTextWhite</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:popupMenuStyle">@style/SMSecretSanta.PopupMenu</item>
        <item name="android:actionBarStyle">@style/SMSecretSanta.ActionBar</item>
        <item name="android:textColorPrimary">@color/colorTextWhite</item>
        <item name="android:alertDialogTheme">@style/SMSecretSanta.AlertDialog</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="SMSecretSanta.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <style name="SMSecretSanta.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="SMSecretSanta.AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textColorPrimary">@color/colorTextBlack</item>
    </style>


</resources>
